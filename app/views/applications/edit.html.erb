<fieldset class="steps-form__step">
    <div class="container_12">
      <%= simple_form_for @application, class: 'steps-form' do |form| %>
        <%= render partial: 'form', locals: { a: form } %>
        <div class="steps-form__step-next-btn">
          <%= form.button :submit, class: "btn btn-primary", value: 'Apply' %>
        </div>
    <% end %>
    </div>
</fieldset>