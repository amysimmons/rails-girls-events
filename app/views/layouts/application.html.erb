<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">

  <title>Rails Girls Events</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.png' %>

</head>
<body class="<%= controller_name %> <%= action_name %>">
  <div id="background">
    <header>
      <div class="container_12">
        <a id="logo" href="/">
          <%= image_tag 'railsgirls-logo.png' %>
        </a>
        <% if @admin_page %>
          <%= link_to 'All Users', users_path, class: 'user-link' %>
        <% end %>
      </div>
    </header>

    <div id="container">
      <%= yield %>
    </div>

  </div>
</body>
</html>
