<%= simple_form_for @event do |f| %>
  <fieldset class="steps-form__step">
    <div class="container_12">
      <h1>Create a new event</h1>
      <div class="steps-form__step__fields">
        <div class="steps-form__step__field-group">
          <%= f.input :title, class: 'steps-form__step__field' %>
        </div>
      </div>
      <div class="steps-form__step-next-btn">
        <%= f.button :submit, class: "btn btn-primary", value: 'Create' %>
      </div>
    </div>
  </fieldset>
<% end %>
